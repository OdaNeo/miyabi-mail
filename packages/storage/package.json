{
  "name": "@extension/storage",
  "version": "0.1.1",
  "description": "chrome extension - storage",
  "private": true,
  "sideEffects": false,
  "files": ["dist/**"],
  "main": "./dist/index.js",
  "types": "index.ts",
  "scripts": {
